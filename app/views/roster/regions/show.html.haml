- model_class = Roster::Region
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = resource.name
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = resource.code
%p
  %strong= model_class.human_attribute_name(:short_name) + ':'
  %br
  = resource.short_name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), roster_regions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_roster_region_path(@region), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), roster_region_path(@region), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
