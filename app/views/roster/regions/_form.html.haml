= form_for resource, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.text_field :code, :class => 'text_field'
  .control-group
    = f.label :short_name, :class => 'control-label'
    .controls
      = f.text_field :short_name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), roster_regions_path, :class => 'btn'
