- model_class = Roster::Position
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:region_id) + ':'
  %br
  = resource.region_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = resource.name
%p
  %strong= model_class.human_attribute_name(:vc_regex_raw) + ':'
  %br
  = resource.vc_regex_raw

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), roster_positions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_roster_position_path(resource), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), roster_position_path(resource), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
