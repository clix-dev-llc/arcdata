- model_class = Roster::ShiftTerritory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:region_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:shift_territory_code)
      %th= model_class.human_attribute_name(:fips_code)
      %th= model_class.human_attribute_name(:gis_name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - collection.each do |shift_territory|
      %tr
        %td= link_to shift_territory.id, roster_shift_territory_path(shift_territory)
        %td= shift_territory.region_id
        %td= shift_territory.name
        %td= shift_territory.shift_territory_code
        %td= shift_territory.fips_code
        %td= shift_territory.gis_name
        %td=l shift_territory.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_roster_shift_territory_path(shift_territory), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), roster_shift_territory_path(shift_territory), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_roster_shift_territory_path, :class => 'btn btn-primary'
