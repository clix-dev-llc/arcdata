- model_class = Roster::County
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:region_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:county_code)
      %th= model_class.human_attribute_name(:fips_code)
      %th= model_class.human_attribute_name(:gis_name)
      %th= model_class.human_attribute_name(:vc_regex_raw)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - collection.each do |county|
      %tr
        %td= link_to county.id, roster_county_path(county)
        %td= county.region_id
        %td= county.name
        %td= county.county_code
        %td= county.fips_code
        %td= county.gis_name
        %td= county.vc_regex_raw
        %td=l county.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_roster_county_path(county), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), roster_county_path(county), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_roster_county_path, :class => 'btn btn-primary'
