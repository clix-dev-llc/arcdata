- model_class = Scheduler::DispatchConfig
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:shift_territory_id) + ':'
  %br
  = resource.shift_territory.name
%p
  %strong= model_class.human_attribute_name(:backup_first_id) + ':'
  %br
  = resource.backup_first.try(:full_name)
%p
  %strong= model_class.human_attribute_name(:backup_second_id) + ':'
  %br
  = resource.backup_second.try(:full_name)
%p
  %strong= model_class.human_attribute_name(:backup_third_id) + ':'
  %br
  = resource.backup_third.try(:full_name)
%p
  %strong= model_class.human_attribute_name(:backup_fourth_id) + ':'
  %br
  = resource.backup_third.try(:full_name)
%p
  %strong= model_class.human_attribute_name(:is_active) + ':'
  %br
  = resource.is_active ? 'Yes' : 'No'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), collection_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_resource_path, :class => 'btn'
