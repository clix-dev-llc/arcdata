- model_class = Scheduler::ShiftTime
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:period)
      %th= model_class.human_attribute_name(:start_offset)
      %th= model_class.human_attribute_name(:end_offset)
      %th= model_class.human_attribute_name(:region_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - collection.each do |shift_time|
      %tr
        %td= link_to shift_time.id, scheduler_shift_time_path(shift_time)
        %td= shift_time.name
        %td= shift_time.period
        %td= shift_time.start_offset
        %td= shift_time.end_offset
        %td= shift_time.region.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_resource_path(shift_time), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), resource_path(shift_time), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_resource_path, :class => 'btn btn-primary'
